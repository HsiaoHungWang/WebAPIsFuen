
@{
    ViewData["Title"] = "CanvasChart";
}

<h1>Canvas 長條圖</h1>
<canvas id="myCanvas" width="400" height="300"></canvas>
@section Scripts {
    <script>       
        const datas = [90, 50, 170, 180, 50, 60];

        const canvas = document.querySelector('#myCanvas');
        const context = canvas.getContext("2d");
        let w = 50;
        let x = 20;
        let y = canvas.height;
        context.fillStyle = "green";

        datas.forEach(h => {
           // console.log(h);
            context.fillRect(x, y - h, w, h);
            x += w + 10;
        })


        

    </script>
}

@section Styles{
    <style>
        #myCanvas {
            border: 1px solid green;
        }
    </style>
}